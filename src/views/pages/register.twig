{% extends "../layout/base.twig" %}

{% block style %}
	<link rel="stylesheet" href="/assets/css/register.css">
	<link rel="stylesheet" href="/assets/css/settings.css">
{% endblock %}

{% block title %}
	<title>Créer un compte entreprise</title>
{% endblock %}

{% block main %}
	<main>
		<section>

			<div class="form-container">
				{% if company %}
					<h4>Modifier vos informations entreprise</h4>
				{% else %}
					<h4>Créer un compte</h4>
				{% endif %}
				<form action="" method="post">
					<div class="error">
						{% if error.status %}
							<p>{{error.status}}</p>
						{% elseif error.siret %}
							<p>{{error.siret}}</p>
						{% elseif error.password %}
							<p>{{error.password}}</p>
						{% elseif error.name %}
							<p>{{error.name}}</p>
						{% endif %}
					</div>
					<div class="input-label-containers">
						<label for="status">Raison sociale *</label>
						<input type="text" name="status" id="status" value="{{company.status}}">
					</div>
					<div class="input-label-containers">
						<label for="siret">Siret *</label>
						<input type="text" name="siret" id="siret" value="{{company.siret}}">
					</div>
					<div class="input-label-containers">
						<label for="password">Mot de passe *</label>
						<input type="password" name="password" id="password">
					</div>
					<div class="input-label-containers">
						<label for="confirmPassword">Confirmer le mot de passe *</label>
						<input type="password" name="confirmPassword" id="confirmPassword">
					</div>
					<div class="input-label-containers">
						<label for="name">Nom</label>
						<input type="text" name="name" id="name" value="{{company.name}}">
					</div>
					<div class="btn-container">
						<button class="btn-validate-update">Valider</button>
					</div>
					<p class="form-instructions">* Champs obligatoires</p>
				</form>
			</div>
			{% if company %}
				<div class="btn-back">
					<a href="/">Retour</a>
				</div>
			{% endif %}
		</section>
	</main>
{% endblock %}
